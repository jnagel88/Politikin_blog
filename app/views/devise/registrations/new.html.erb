<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, placeholder: "Email",  autofocus: true, autocomplete: "email"  %>
  </div>

  <div class="form-group">
    <%= f.text_field :username, placeholder: "Username" %> 
  </div>

  <div class="form-group">

    <%= f.password_field :password, placeholder: "Password, #{@minimum_password_length} char min.", autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "off" %>
  </div>
  
  <div class="form-group">
    <strong>Upload a Profile Pic:</strong>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
