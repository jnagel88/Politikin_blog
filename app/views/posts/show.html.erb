<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.user.username %> <%= image_tag @post.user.avatar.url, size: 30 %>
</p>

<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry.html_safe  %>
</p>

<p>
	Posted at: <%= @post.created_at  %>	
</p>



<%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Back', posts_path %>

<h5 ><b><u> Comments</u></b></h5>

<div id="comments">

    <% @post.comments.each do |comment| %>
        <div>    
            <%= image_tag comment.user.avatar.url, size: 80 %>
            <p style="display: inline-block">
        	    <%= comment.user.username %> said...<br />
        	    <%= comment.comment_entry %><br/>
        	    Posted at: <%= comment.created_at %>
    	    </p>
	    </div>
    <% end %>

     <%= render 'comments/form', comment: @comment %>

</div>

<%= link_to 'Back', posts_path %>

